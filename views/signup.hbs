<!doctype html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>{{title}}</title>
<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.3/angular.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.3/angular-route.min.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
<script src="/javascripts/script.js"></script>
</head>
<body>
<div class="container">
    <img class="img-responsive" src="{{headerImageSource}}"><div class="container">
	<div class="container signin-page">

<div class="container">
	<h1 class="well">Registration Form</h1>
	<div class="col-lg-12 well">
		<div class="row">
			{{#if hasErrors }}
			<div class="alert alert-danger">
				{{# each message }}
				<p>{{this}}</p>
				{{/each}}
			</div>
			{{/if}}
			<form action="/user/signup" method="POST">
				<div class="col-sm-12">
					<div class="row">
						<div class="col-sm-6 form-group">
							<label>First Name</label>
							<input type="text" name="first_name" value="{{first_name}}" placeholder="Enter First Name Here.." class="form-control">
						</div>
						<div class="col-sm-6 form-group">
							<label>Last Name</label>
							<input type="text" name="last_name" value="{{last_name}}" placeholder="Enter Last Name Here.." class="form-control">
						</div>
					</div>
					
					<div class="form-group">
						<label>Email Address</label>
						<input type="text" value="{{email}}" name="email" placeholder="Enter Email Address Here.." class="form-control" required>
					</div>
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<label>Password</label>
								<input name="password" type="password" placeholder="Password" class="form-control" value="" required>
							</div>
						</div>
						<div class="col-md-6">
							<label>Confirm Password</label>
							<input name="verifypassword" type="password" placeholder="Verify Password" class="form-control" value="" required>
						</div>
					</div>
					
					<button type="submit" class="btn btn-lg btn-info">Submit</button>
				</div>
				<input type="hidden" name="_csrf" value="{{ csrfToken }}">
			</form>
			<p class="pull-right">Forgot? <a href="/user/forgot">Reset</a></p>
		</div>
	</div>
</div>